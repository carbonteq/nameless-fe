{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": { "noExplicitAny": "off" },
			"complexity": { "noBannedTypes": "off" }
		}
	},
	"javascript": { "parser": { "unsafeParameterDecoratorsEnabled": true } },
	"files": {
		"include": [
			"app",
			"components",
			"config",
			"public",
			"styles",
			"types",
			"biome.json",
			"next.config.js",
			"package.json",
			"postcss.config.js",
			"tailwind.config.js",
			"tsconfig.json"
		],
		"ignore": [".next", "node_modules"]
	}
}
